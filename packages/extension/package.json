{
    "name": "smart-buddy",
    "displayName": "Smart Code Buddy",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/cofficlab/buddy"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "publisher": "coffic",
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onCommand:vue-3-vscode-webview.createFlow"
    ],
    "contributes": {
        "commands": [
            {
                "command": "vue-3-vscode-webview.createFlow",
                "title": "Open AI Chat Assistant"
            }
        ],
        "configuration": {
            "title": "AI Chat Assistant",
            "properties": {
                "buddycoder.aiProvider": {
                    "type": "string",
                    "default": "openai",
                    "enum": [
                        "openai",
                        "anthropic",
                        "deepseek"
                    ],
                    "description": "Select the AI provider to use"
                },
                "buddycoder.openai.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for OpenAI"
                },
                "buddycoder.anthropic.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for Anthropic"
                },
                "buddycoder.deepseek.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for Deepseek"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "dev": "bash -exec 'code --extensionDevelopmentPath=$(pwd)'",
        "deploy": "vsce publish --yarn"
    },
    "dependencies": {
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.4",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "@vscode/vsce": "^3.3.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "ts-loader": "^9.2.5",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}
