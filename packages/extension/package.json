{
    "name": "smart-buddy",
    "displayName": "Smart Code Buddy",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/cofficlab/CodeBuddy"
    },
    "version": "0.0.10",
    "engines": {
        "vscode": "^1.63.0"
    },
    "publisher": "coffic",
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onCommand:buddycoder.open"
    ],
    "contributes": {
        "commands": [
            {
                "command": "buddycoder.open",
                "title": "Open AI Chat Assistant"
            }
        ],
        "configuration": {
            "title": "AI Chat Assistant",
            "properties": {
                "buddycoder.aiProvider": {
                    "type": "string",
                    "default": "openai",
                    "enum": [
                        "openai",
                        "anthropic",
                        "deepseek"
                    ],
                    "description": "Select the AI provider to use"
                },
                "buddycoder.openai.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for OpenAI"
                },
                "buddycoder.anthropic.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for Anthropic"
                },
                "buddycoder.deepseek.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for Deepseek"
                }
            }
        }
    },
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "build:mcp": "vite build --config vite.mcp.config.ts",
        "run:mcp": "yarn build:mcp && node --enable-source-maps dist/mcp/mcp.js",
        "preview": "vite preview",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run build && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "dev:vscode": "bash -exec 'code --extensionDevelopmentPath=$(pwd)'",
        "deploy": "vsce publish --yarn"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.39.0",
        "@modelcontextprotocol/sdk": "^1.7.0",
        "chalk": "4",
        "dotenv": "^16.4.7",
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^22.13.10",
        "@types/node-fetch": "^2.6.4",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vscode/test-electron": "^1.6.2",
        "@vscode/vsce": "^3.3.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^5.8.2",
        "vite": "5.4.14"
    }
}